@model library_management_system.Models.Penalty

@{
    Layout = "~/Views/Shared/Admin/_layout.cshtml";
}
<div class="card w-50 m-auto mt-5">
    <div class="card-body">
        <h3 class="text-cebter">Penalty</h3>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PenaltyID" />
                    <div class="form-group mb-3">
                        <label asp-for="Student" class="control-label"></label>
                        <select asp-for="StudentID" class="form-control" asp-items="ViewBag.StudentID"></select>
                        <span asp-validation-for="StudentID" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Amount" class="control-label"></label>
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Reason" class="control-label"></label>
                        <input asp-for="Reason" class="form-control" />
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Date" class="control-label"></label>
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    
                    <hr />
                    <div class="form-group mb-3">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-danger">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

