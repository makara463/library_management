
@{
    Layout = "~/Views/Shared/Admin/_layout.cshtml";
}
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-6 col-xl-6">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-map-marker-alt fa-3x text-primary"></i>
                <div class="ms-3">
                    <a asp-controller="Branches" asp-action="Index">
                        <p class="mb-2">Total Branches</p>
                        <h3 class="mb-0">@ViewBag.branches</h3>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-6">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-book fa-3x text-primary"></i>
                <div class="ms-3">
                    <a asp-controller="Publications" asp-action="Index">
                         <p class="mb-2">Total Publications</p>
                        <h3 class="mb-0">@ViewBag.publications</h3>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-6">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-book fa-3x text-primary"></i>
                <div class="ms-3">
                    <a asp-controller="Books" asp-action="Index">
                        <p class="mb-2">Total Books</p>
                        <h3 class="mb-0">@ViewBag.books</h3>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-6">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-user-graduate fa-3x text-primary"></i>
                <div class="ms-3">
                    <a asp-controller="Students" asp-action="Index">
                        <p class="mb-2">Total Student</p>
                        <h3 class="mb-0">@ViewBag.students</h3>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-6">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-book fa-3x text-primary"></i>
                <div class="ms-3">
                    <a asp-controller="Issues" asp-action="Index">
                        <p class="mb-2">Total Issues</p>
                        <h3 class="mb-0">@ViewBag.issues</h3>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-6">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-exclamation-triangle fa-3x text-danger"></i>
                <div class="ms-3">
                    <a asp-controller="Penalties" asp-action="Index">
                        <p class="mb-2">Total Penalties</p>
                        <h3 class="mb-0">@ViewBag.penalties</h3>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Sale & Revenue End -->